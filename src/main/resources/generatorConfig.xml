<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE generatorConfiguration
        PUBLIC "-//mybatis.org//DTD MyBatis Generator Configuration 1.0//EN"
        "http://mybatis.org/dtd/mybatis-generator-config_1_0.dtd">

<generatorConfiguration>
    <context id="BooksDB" targetRuntime="MyBatis3Simple">
        <jdbcConnection driverClass="org.h2.Driver"
                        connectionURL="jdbc:h2:~/h2database/BooksDB;AUTO_SERVER=TRUE"
                        userId="sa"
                        password="sa">
        </jdbcConnection>

        <javaModelGenerator targetPackage="lt.vu.persistence.mybatis.model" targetProject="MAVEN" />

        <sqlMapGenerator targetPackage="lt.vu.usecases.mybatis.xml" targetProject="MAVEN" />
        <javaClientGenerator type="XMLMAPPER" targetPackage="lt.vu.mybatis.dao" targetProject="MAVEN" />


        <table schema="public" tableName="author">
            <generatedKey column="id" identity="true" sqlStatement="JDBC" />
            <ignoreColumn column="opt_lock_version" />
        </table>
        <table schema="public" tableName="book">
            <generatedKey column="isbn" identity="true" sqlStatement="JDBC" />
            <ignoreColumn column="opt_lock_version" />
        </table>
    </context>
</generatorConfiguration>